package com.comviva.mfs.util;

import java.util.ArrayList;
import java.util.Date;
import java.util.List;

import com.comviva.mfs.constant.test.EnquiryTestConstants;
import com.comviva.mfs.constant.test.TestBaseConstants;
import com.comviva.mfs.entity.MdsRequestResponseHist;
import com.comviva.mfs.model.EnquiryRequest;

public class EnquiryDataPreparationUtil {

	public static List<MdsRequestResponseHist> getEnquiryDetails(){
		List<MdsRequestResponseHist> list =new ArrayList<>();
		list.add(getMdsRequestResponseHist());
		return list;
	}
	
	public static String getEnquiresByExternalRefIdUrl() {
		return CommonUtilTest.getBaseUrl(EnquiryTestConstants.ENQUIRYS_BY_EXTERNAM_REF_ID.getValue()+EnquiryTestConstants.EXTERNAM_REF_ID.getValue());
	}
	
	public static String getEnquiryRequest() {
		EnquiryRequest request = new EnquiryRequest();
		request.setBearerCode(TestBaseConstants.BEARER_CODE_VALUE.getValue());
		request.setIdentifierType(TestBaseConstants.IDENTIFIER_TYPE_VALUE.getValue());
		request.setIdentifierValue(TestBaseConstants.IDENTIFIER_VALUE_CHANNELADMIN_VALUE.getValue());
		request.setExternalRefId(EnquiryTestConstants.EXTERNAM_REF_ID.getValue());
		return CommonUtilTest.convertObjectToJson(request);
	}
	
	public static MdsRequestResponseHist getMdsRequestResponseHist() {
		MdsRequestResponseHist mdsRequestResponseHist = new MdsRequestResponseHist();
		mdsRequestResponseHist.setReferenceId(EnquiryTestConstants.REFERENCE_ID.getValue());
		mdsRequestResponseHist.setExternalRefId(EnquiryTestConstants.EXTERNAM_REF_ID.getValue());
		mdsRequestResponseHist.setServiceType(EnquiryTestConstants.SERVICE_TYPE.getValue());
		mdsRequestResponseHist.setBearerCode(EnquiryTestConstants.BEARER_CODE.getValue());
		mdsRequestResponseHist.setRequestedBy(EnquiryTestConstants.REQUESTED_BY.getValue());
		mdsRequestResponseHist.setRequestedOn(new Date());
		return mdsRequestResponseHist;
	}
}
