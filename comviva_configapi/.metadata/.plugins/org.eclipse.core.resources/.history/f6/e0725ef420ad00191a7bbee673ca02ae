package com.comviva.mfs.service.grade;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.config.ConfigurableBeanFactory;
import org.springframework.context.annotation.Scope;
import org.springframework.context.annotation.ScopedProxyMode;
import org.springframework.kafka.core.KafkaTemplate;
import org.springframework.stereotype.Service;

import com.comviva.mfs.common.Constants;
import com.comviva.mfs.common.MessageCodes;
import com.comviva.mfs.common.ServiceRoleCodes;
import com.comviva.mfs.common.ValidationException;
import com.comviva.mfs.common.utils.CommonUtils;
import com.comviva.mfs.entity.GradeChecker;
import com.comviva.mfs.entity.GradeMaker;
import com.comviva.mfs.model.grade.DeleteGradeInitiateRequest;
import com.comviva.mfs.model.grade.DeleteGradeInitiateResponse;
import com.comviva.mfs.repository.GradeCheckerRepository;
import com.comviva.mfs.repository.GradeMakerRepository;
import com.comviva.mfs.service.CommonService;

/**
 * DeleteGradeInitiateService class is methods to initiate the delete grade
 * 
 * @author Venkatesans
 */
@Service
@Scope(scopeName = ConfigurableBeanFactory.SCOPE_PROTOTYPE, proxyMode = ScopedProxyMode.TARGET_CLASS)
public class DeleteGradeInitiateService extends CommonService {

    private GradeChecker gradeChecker;
    private DeleteGradeInitiateRequest deleteGradeInitiateRequest;
    private GradeCheckerRepository gradeCheckerRepository;
    private GradeMakerRepository gradeMakerRepository;
    private String gradeCode;

    @Autowired
    private KafkaTemplate<String, Object> kafkaTemplate;

    /**
     * Construct DeleteGradeInitiateService
     * 
     * @param gradeCheckerRepository
     *            - gradeCheckerRepository
     * @param gradeMakerRepository
     *            - gradeMakerRepository
     */
    @Autowired
    public DeleteGradeInitiateService(GradeCheckerRepository gradeCheckerRepository,
            GradeMakerRepository gradeMakerRepository) {
        this.gradeCheckerRepository = gradeCheckerRepository;
        this.gradeMakerRepository = gradeMakerRepository;
    }

    /**
     * Process of DeleteGradeInitiate
     * 
     * @param gradeCode
     *            - String
     * @param deleteGradeInitiateRequest
     *            - deleteGradeInitiateRequest
     * @return DeleteGradeInitiateResponse
     */
    public DeleteGradeInitiateResponse execute(String gradeCode,
            DeleteGradeInitiateRequest deleteGradeInitiateRequest) {
        Map<String, Object> constructAdminMap = new HashMap<>();
        List<String> params = new ArrayList<>();
        String isApprovalRequired;
        this.deleteGradeInitiateRequest = deleteGradeInitiateRequest;
        this.gradeCode = gradeCode;
        serviceRoleCode = ServiceRoleCodes.DELETE_GRADE_INIT_ROLE.getStrValue();
        super.initiate(deleteGradeInitiateRequest, serviceRoleCode);
        isApprovalRequired = deleteGradeInitiateRequest.getIsApprovalRequired();
        validateInputs();
        if (null != isApprovalRequired && Constants.ACTIVE_STATUS.getStrValue().equals(isApprovalRequired)) {
            GradeMaker gradeMaker = new GradeMaker();
            copyObjects(gradeMaker, gradeChecker);
            gradeMaker.setStatus(Constants.DELETE_INITIATE_STATUS.getStrValue());
            gradeMakerRepository.save(gradeMaker);
            constructAdminMap.put(NEW_OBJECT, gradeMaker);
            constructAdminMap.put(OLD_OBJECT, gradeChecker);
            params.add(gradeMaker.getGradeName());
            responseMessageCode = MessageCodes.GRADE_DELETE_INIT_SUCCESS.getStrValue();
        } else {
            constructAdminMap.put(OLD_OBJECT, gradeChecker);
            gradeChecker.setStatus(Constants.INACTIVE_STATUS.getStrValue());
            gradeCheckerRepository.save(gradeChecker);
            params.add(gradeChecker.getGradeName());
            constructAdminMap.put(NEW_OBJECT, gradeChecker);
            responseMessageCode = MessageCodes.GRADE_DELETE_APPR_SUCCESS.getStrValue();
            kafkaTemplate.send("gradeChecker", gradeChecker);
        }
        responseStatus = Constants.SUCCESS_RESPONSE.getStrValue();
        createRequestResponseHistObject();
        createAuditLogMap(constructAdminMap);
        generateReponseMessage(params);
        return createResponse();
    }

    /**
     * Validate the request parameters
     */
    public void validateInputs() {
        if (CommonUtils.isNullorEmpty(gradeCode)) {
            throw new ValidationException(Constants.GRADE_CODE.getStrValue(),
                    MessageCodes.FIELD_MANDATORY.getStrValue());
        } else if (!CommonUtils.isAlphaNumericAndLenghtCheck(gradeCode, gradeCode.length(),
                Constants.GRADE_CODE_LENGTH.getIntValue())) {
            throw new ValidationException(Constants.GRADE_CODE.getStrValue(),
                    MessageCodes.FIELD_ALPHANUMERIC.getStrValue());
        }
        
        if (CommonUtils.isNullorEmpty(addGradeInitiateRequest.getIsApprovalRequired())) {
            throw new ValidationException(Constants.IS_APPROVE.getStrValue(),
                    MessageCodes.FIELD_MANDATORY.getStrValue());
        } else if (!CommonUtils.isApprovalRequired(addGradeInitiateRequest.getIsApprovalRequired())) {
            throw new ValidationException(Constants.IS_APPROVE.getStrValue(),
                    MessageCodes.FIELD_INVALID.getStrValue());
        }
        
        
        gradeChecker = gradeCheckerRepository.getGradeByGradeCode(Constants.YES.getStrValue(), gradeCode);
        if (gradeChecker == null) {
            throw new ValidationException(gradeCode, MessageCodes.GRADE_CODE_NOT_FOUND.getStrValue());
        }
        GradeMaker gradeMaker = gradeMakerRepository.getGradeByGradeCode(gradeCode);
        if (gradeMaker != null) {
            throw new ValidationException(gradeCode, MessageCodes.UNDER_APPROVAL.getStrValue());
        }
    }

    /**
     * Construct the DeleteGradeInitiateResponse
     * 
     * @return DeleteGradeInitiateResponse
     */

    @Override
    public DeleteGradeInitiateResponse createResponse() {
        DeleteGradeInitiateResponse deleteInitiateGradeResponse = new DeleteGradeInitiateResponse();
        deleteInitiateGradeResponse.setStatus(responseStatus);
        deleteInitiateGradeResponse.setExternalRefId(deleteGradeInitiateRequest.getExternalRefId());
        deleteInitiateGradeResponse.setReferenceId(referenceId);
        deleteInitiateGradeResponse.setMessage(responseMessage);
        return deleteInitiateGradeResponse;
    }

}
