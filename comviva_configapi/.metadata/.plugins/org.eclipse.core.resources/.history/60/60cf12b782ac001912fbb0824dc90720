package com.comviva.mfs.service.grouprole.test;

import static org.hamcrest.CoreMatchers.is;
import static org.junit.Assert.assertNotNull;
import static org.junit.Assert.assertThat;
import static org.mockito.Mockito.when;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.mockito.Mockito;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.boot.test.mock.mockito.MockBean;
import org.springframework.test.context.junit4.SpringRunner;
import org.springframework.test.context.web.WebAppConfiguration;

import com.comviva.mfs.MdsApplication;
import com.comviva.mfs.common.MessageCodes;
import com.comviva.mfs.constant.test.GroupRoleTestConstants;
import com.comviva.mfs.constant.test.TestBaseConstants;
import com.comviva.mfs.model.grouprole.GetGroupRoleByGroupRoleCodeResponse;
import com.comviva.mfs.repository.CategoryCheckerRepository;
import com.comviva.mfs.repository.GradeCheckerRepository;
import com.comviva.mfs.repository.GroupRoleCheckerRepository;
import com.comviva.mfs.repository.GroupRoleCustomRepository;
import com.comviva.mfs.repository.GroupRoleMakerRepository;
import com.comviva.mfs.repository.SysGroupRoleCheckerRepository;
import com.comviva.mfs.repository.SysGroupRoleMakerRepository;
import com.comviva.mfs.service.grouprole.GetGroupRoleByGroupRoleCodeService;

@RunWith(SpringRunner.class)
@SpringBootTest(classes = MdsApplication.class)
@WebAppConfiguration
public class GetGroupRoleByGroupRoleCodeServiceTest {
    
    @MockBean
    private SysGroupRoleCheckerRepository sysGroupRoleCheckerRepository;
    @MockBean
    private SysGroupRoleMakerRepository sysGroupRoleMakerRepository;
    @MockBean
    private GroupRoleMakerRepository groupRolesMakerRepository;
    @MockBean
    private GroupRoleCheckerRepository groupRoleCheckerRepository;
    @MockBean
    private CategoryCheckerRepository categoryCheckerRepository;
    @MockBean
    private GradeCheckerRepository gradeCheckerRepository;
    @MockBean
    private GroupRoleCustomRepository groupRoleCustomRepository;
    
    
    @Autowired
    private GetGroupRoleByGroupRoleCodeService getGroupRoleByGroupRoleCodeService;
    
    @Test
    public void testGetGroupRoleByGroupRoleCodeServiceSysGroupRoleCheckerNull() {
        when(sysGroupRoleCheckerRepository.getGroupRoleByGroupRoleCode(Mockito.anyString()))
        .thenReturn(null);
        GetGroupRoleByGroupRoleCodeResponse response = getGroupRoleByGroupRoleCodeService.execute(GroupRoleTestConstants.GROUP_ROLE_CODE.getValue(), 
                                                                                                  TestBaseConstants.IDENTIFIER_TYPE_VALUE.getValue(), 
                                                                                                  TestBaseConstants.IDENTIFIER_VALUE_NETADMIN_VALUE.getValue(), 
                                                                                                  TestBaseConstants.BEARER_CODE_VALUE.getValue(), 
                                                                                                  TestBaseConstants.NO.getValue());
        assertThat("validation status",response.getStatus(),is(MessageCodes.GROUP_ROLE_CODE_NOT_FOUND.getStrValue()));
        assertNotNull("validate referenceId",response.getReferenceId());
    }
    
   
}
