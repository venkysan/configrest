	public static String addGradeInitialNoApprovalRequest() {
		AddGradeInitiateRequest addInitiateGrade = getAddGradeInitiateRequest();
		addInitiateGrade.setIsApprovalRequired(null);
		return CommonUtilTest.convertObjectToJson(addInitiateGrade);
	}

	private static AddGradeInitiateRequest getAddGradeInitiateRequest() {
		AddGradeInitiateRequest addInitiateGrade = new AddGradeInitiateRequest();
		addInitiateGrade.setBearerCode(TestBaseConstants.BEARER_CODE_VALUE.getValue());
		addInitiateGrade.setExternalRefId(GradeTestConstants.EXTERNAL_REF_ID.getValue());
		addInitiateGrade.setIdentifierType(TestBaseConstants.IDENTIFIER_TYPE_VALUE.getValue());
		addInitiateGrade.setIdentifierValue(TestBaseConstants.IDENTIFIER_VALUE_SUPER_ADMIN_VALUE.getValue());
		addInitiateGrade.setGradeCode(GradeTestConstants.GRADE_CODE.getValue());
		addInitiateGrade.setGradeName(GradeTestConstants.GRADE_NAME.getValue());
		addInitiateGrade.setDomainCode(GradeTestConstants.DOMAIN_CODE.getValue());
		addInitiateGrade.setDomainName(GradeTestConstants.DOMAIN_NAME.getValue());
		addInitiateGrade.setCategoryName(GradeTestConstants.CATEGORY_NAME.getValue());
		addInitiateGrade.setCategoryCode(GradeTestConstants.CATEGORY_CODE.getValue());
		addInitiateGrade.setIsApprovalRequired(GradeTestConstants.IS_APPROVAL_REQUIRED.getValue());
		return addInitiateGrade;
	}

