	public static List<GradeChecker> getGrades(){
		List<GradeChecker> list = new ArrayList<GradeChecker>();
		list.add(getGradeChecker());
		return list;
	}
	public static List<GradeMaker> getMakerGrades(){
        List<GradeMaker> list = new ArrayList<GradeMaker>();
        list.add(getGradeMaker());
        return list;
    }
	
	public static GradeMaker getGradeMaker() {
		GradeMaker gradeMaker = new GradeMaker();
		gradeMaker.setCategoryCode(GradeTestConstants.CATEGORY_CODE.getValue());
		gradeMaker.setGradeName(GradeTestConstants.GRADE_NAME.getValue());
		gradeMaker.setGradeCode(GradeTestConstants.GRADE_CODE.getValue());
		gradeMaker.setCreatedBy(TestBaseConstants.IDENTIFIER_VALUE_SUPER_ADMIN_VALUE.getValue());
		gradeMaker.setModifiedBy(TestBaseConstants.IDENTIFIER_VALUE_SUPER_ADMIN_VALUE.getValue());
		gradeMaker.setStatus(Constants.ADD_INITIATE_STATUS.getStrValue());
		gradeMaker.setCreatedOn(new Date());
		gradeMaker.setModifiedOn(new Date());
		return gradeMaker;
	}
	
	public static GradeChecker getGradeChecker() {
		GradeChecker gradeChecker = new GradeChecker();
		gradeChecker.setCategoryCode(GradeTestConstants.CATEGORY_CODE.getValue());
		gradeChecker.setGradeName(GradeTestConstants.GRADE_NAME.getValue());
		gradeChecker.setGradeCode(GradeTestConstants.GRADE_CODE.getValue());
		gradeChecker.setCreatedBy(TestBaseConstants.IDENTIFIER_VALUE_SUPER_ADMIN_VALUE.getValue());
		gradeChecker.setModifiedBy(TestBaseConstants.IDENTIFIER_VALUE_SUPER_ADMIN_VALUE.getValue());
		gradeChecker.setCreatedOn(new Date());
		gradeChecker.setModifiedOn(new Date());
		return gradeChecker;
	}
	
	public static DomainChecker getDomainChecker() {
	    DomainChecker domainChecker = new DomainChecker();
	    domainChecker.setDomainCode(domainCode);
	    domainChecker.setDomainName(domainName);;
       
        return domainChecker;
    }
	
	
	
